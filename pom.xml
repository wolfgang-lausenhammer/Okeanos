		<pax-exam-version>3.4.0</pax-exam-version>
		<ops4j-url-version>1.5.2</ops4j-url-version>
		<slf4j-version>1.7.6</slf4j-version>
		<springockito-version>1.0.9</springockito-version>
		<hamcrest-version>1.3</hamcrest-version>
		<org.ops4j.pax.logging.DefaultServiceLog.level>WARN</org.ops4j.pax.logging.DefaultServiceLog.level>
		<pax.exam.framework>equinox</pax.exam.framework>
	</properties>

	<modules>
		<module>poms</module>
		<module>provision</module>
		<module>okeanos.management</module>
		<module>okeanos.management.impl</module>
		<module>okeanos.core</module>
		<module>okeanos.core.impl</module>
		<module>okeanos.control</module>
		<module>okeanos.control.impl</module>
		<module>okeanos.model</module>
		<module>okeanos.model.impl</module>
		<module>okeanos.runner</module>
