		<module>okeanos.data</module>
		<module>okeanos.data.impl</module>
		<module>okeanos.jiac.additions</module>
		<module>okeanos.spring.misc</module>
		<module>okeanos.math</module>
	</modules>

	<build>
		<plugins>
			<plugin>
				<groupId>org.ops4j</groupId>
				<artifactId>maven-pax-plugin</artifactId>
				<version>1.5</version>
				<configuration>
					<downloadSources>true</downloadSources>
					<framework>felix</framework>
					<noUses>true</noUses>
					<pde>true</pde>
					<widenScope>true</widenScope>
					<provision>
						<param>scan-dir:target/classes</param>
					</provision>
					<maxmem>1024</maxmem>
					<meminitial>512</meminitial>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-failsafe-plugin</artifactId>
				<version>2.16</version>
				<executions>
					<execution>
						<goals>
							<goal>integration-test</goal>
						</goals>
					</execution>
				</executions>
				<configuration>
					<forkMode>always</forkMode>
					<parallel>none</parallel>
					<threadCount>1</threadCount>
					<argLine>-Xmx1024m -XX:MaxPermSize=512m</argLine>
				</configuration>
			</plugin>
			<plugin>
				<artifactId>maven-compiler-plugin</artifactId>
				<version>3.1</version>
				<configuration>
					<source>1.7</source>
					<target>1.7</target>
				</configuration>
			</plugin>
		</plugins>
	</build>

	<repositories>
		<repository>
			<id>eclipse-gemini</id>
			<name>Eclipse Gemini Maven repository</name>
			<url>http://download.eclipse.org/gemini/mvn/</url>
		</repository>
		<repository>
			<id>dai-open</id>
			<name>DAI Open</name>
			<url>http://repositories.dai-labor.de/extern/content/repositories/dai-open</url>
			<releases>
				<enabled>true</enabled>
			</releases>
			<snapshots>
				<enabled>false</enabled>
			</snapshots>
		</repository>
		<repository>
			<id>other</id>
			<name>Other</name>
			<url>http://dev.anyframejava.org/maven/repo/</url>
			<releases>
				<enabled>false</enabled>
			</releases>
			<snapshots>
