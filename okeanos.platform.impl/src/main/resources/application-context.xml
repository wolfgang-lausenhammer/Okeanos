	<osgi:service id="communicationServiceOsgi" ref="communicationServiceImpl"
		interface="okeanos.platform.services.CommunicationService" />
	<osgi:service id="entityManagementServiceOsgi" ref="entityManagementServiceImpl"
		interface="okeanos.platform.services.EntityManagementService" />
	<osgi:service id="knowledgeBaseServiceOsgi" ref="knowledgeBaseServiceImpl"
		interface="okeanos.platform.services.KnowledgeBaseService" />
	<osgi:service id="loggingServiceOsgi" ref="loggingServiceImpl"
		interface="okeanos.platform.services.LoggingService" />
	<osgi:service id="platformManagementServiceOsgi" ref="platformManagementServiceImpl"
		interface="okeanos.platform.services.PlatformManagementService" />
	<osgi:service id="pricingServiceOsgi" ref="pricingServiceImpl"
		interface="okeanos.platform.services.PricingService" />
	<osgi:service id="timeServiceOsgi" ref="timeServiceImpl"
		interface="okeanos.platform.services.TimeService" />
	<osgi:service id="weatherServiceOsgi" ref="weatherServiceImpl"
		interface="okeanos.platform.services.WeatherService" />
</beans>
